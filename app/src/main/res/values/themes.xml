<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="statusBarBackground">@color/back_primary</item>
        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorSecondary">@color/back_secondary</item>
        <item name="colorOnSurfaceVariant">@color/support_separator</item>
    </style>

    <style name="ToDoApp.Text" parent="TextAppearance.AppCompat" />
    <style name="ToDoApp.Text.LargeTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">38sp</item>
    </style>
    <style name="ToDoApp.Text.Title" parent="ToDoApp.Text">
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">32sp</item>
    </style>
    <style name="ToDoApp.Text.Body" parent="ToDoApp.Text">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>
    <style name="ToDoApp.Text.Subhead" parent="ToDoApp.Text">
        <item name="android:textColor">@color/label_tertiary</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="ToDoApp.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
    </style>
</resources>